{{#if updateAnnouncement}}
  <h1>Update Announcement</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=announcement.title}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{textarea value=content id="content" placeholder=announcement.content}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input type="date" value=date id="date" placeholder=announcement.date}}
        </div>
        <button {{action 'update' announcement}}>Save</button>
      </form>
    </div>
 {{else}}
    <button {{action 'updateAnnouncementFormShow'}}>Update Announcement</button>
{{/if}}
