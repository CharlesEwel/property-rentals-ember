{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{textarea value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input type="date" value=date id="date"}}
        </div>
        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
 {{else}}
    <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
